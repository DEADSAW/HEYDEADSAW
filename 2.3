

#include <stdio.h>

int main() {
    int arr[20][20]; 
    int row, col;

    printf("Enter the number of rows: ");
    scanf("%d", &row);
    printf("Enter the number of columns: ");
    scanf("%d", &col);

    printf("Enter the elements of the matrix:\n");
    for (int i = 0; i < row; i++) {
        for (int j = 0; j < col; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    int sparse[20][3];
    int k = 0;

    for (int i = 0; i < row; i++) {
        for (int j = 0; j < col; j++) {
            if (arr[i][j] != 0) {
                sparse[k][0] = i;
                sparse[k][1] = j;
                sparse[k][2] = arr[i][j];
                k++;
            }
        }
    }

    printf("The sparse matrix is:\n");
    for (int i = 0; i < k; i++) {
        for (int j = 0; j < 3; j++) {
            printf("%d\t", sparse[i][j]);
        }
        printf("\n");
    }

    return 0;
}

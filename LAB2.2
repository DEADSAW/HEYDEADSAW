#include <stdio.h>

// Function to find the number of nonzero elements in a square matrix
int countNonZeroElements(int matrix[][100], int n) {
    int count = 0;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (matrix[i][j] != 0) {
                count++;
            }
        }
    }
    return count;
}

// Function to display the upper triangular matrix
void displayUpperTriangular(int matrix[][100], int n) {
    printf("Upper Triangular Matrix:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (j < i) {
                printf("0\t");
            } else {
                printf("%d\t", matrix[i][j]);
            }
        }
        printf("\n");
    }
}

// Function to display the elements just above and below the main diagonal
void displayAboveBelowDiagonal(int matrix[][100], int n) {
    printf("Elements Above and Below the Main Diagonal:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i < j) {
                printf("%d\t", matrix[i][j]);
            } else if (i > j) {
                printf("%d\t", matrix[i][j]);
            } else {
                printf("0\t"); // Main diagonal elements
            }
        }
        printf("\n");
    }
}

int main() {
    int n;

    printf("Enter the size of the square matrix: ");
    scanf("%d", &n);

    int matrix[100][100];

    printf("Enter the elements of the square matrix:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    // Find the number of nonzero elements and display them
    int nonZeroCount = countNonZeroElements(matrix, n);
    printf("Number of Nonzero Elements: %d\n", nonZeroCount);

    // Display the upper triangular matrix
    displayUpperTriangular(matrix, n);

    // Display the elements above and below the main diagonal
    displayAboveBelowDiagonal(matrix, n);

    return 0;
}
